---
import Typing from "@/components/Typing.astro"
import { ViewTransitions, slide } from "astro:transitions"

type Props = {
  title: string
  description?: string
  hasFooter?: boolean
}

const { title, hasFooter, description } = Astro.props
const footerMessages = [
  "likes design",
  "wants your podcast suggestions",
  "lives in the Dominican Republic",
  "loves pepperoni pizza",
  "is a Star Wars fan",
  "wants you to have a great day",
]
---

