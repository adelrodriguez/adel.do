    <ViewTransitions />
    <meta name="description" content={description} />
    <script
      defer
      data-domain="adel.do"
      src="https://plausible.io/js/script.js"
      is:inline></script>
  </head>
  <body class="text-gray-800 flex flex-col min-h-screen">
    <main
