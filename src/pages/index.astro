---
import Layout from '@/layouts/Layout.astro'
import Typing from '@/components/Typing.astro'

import tech from '@/content/resume/tech.json'
import jobs from '@/content/resume/jobs.json'
import education from '@/content/resume/education.json'

import Favicon from '@/components/Favicon.astro'
import Section from '@/components/Section.astro'
import NavLink from '@/components/NavLink.astro'

const intro = [
  'a Software Engineer.',
  'a web developer.',
  'an indiehacker.',
  'constantly learning.',
  'happy to meet you!',
]

const links = [
  {
    name: 'about',
    url: '/about',
  },
  {
    name: 'tech',
    url: '/tech',
  },
  {
    name: 'resume',
    url: '#',
  },
  {
    name: 'blog',
    url: 'https://blog.adel.do',
    external: true,
  },
  {
    name: 'contact',
    url: 'mailto:hello@adelrodriguez.com',
  },
  {
    name: 'github',
    url: 'https://www.github.com/adelrodriguez',
    external: true,
  },
  {
    name: 'x',
    url: 'https://twitter.com/adeldotdo',
    external: true,
  },
  {
    name: 'linkedin',
    url: 'https://www.linkedin.com/in/adelrodriguez/',
    external: true,
  },
]
---

<Layout title="Hello, I'm Adel!">
  <section class="flex min-h-screen items-center w-full">
    <div class="select-none font-bold">
      <div class="mb-5 text-3xl md:text-5xl">
        {'<🧔🏻‍♂️/>'}
      </div>
      <div class="mb-4 text-4xl tracking-tight md:text-6xl">
        <h1 class="leading-normal md:leading-normal">Hello, I'm Adel!</h1>
        <h2 class="leading-normal md:leading-normal">
          I'm
          <Typing id="hello" messages={intro} />
        </h2>
      </div>
      <nav class="font-light w-full">
        {
          links.map((link) => (
            <div class="group mb-2 mr-5 inline-block">
              <NavLink name={link.name} url={link.url} external={link.external} />
            </div>
          ))
        }
      </nav>
    </div>
  </section>
</Layout>
